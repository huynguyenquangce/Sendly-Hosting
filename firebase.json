{
  "hosting": [
    {
      "site": "sendly-email-template-builder",
      "public": "public",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "/api/**",
          "function":
          {
            "functionId": "api",
            "region": "asia-southeast1"
          }
        },
        {
           "source": "**",
           "destination": "/index.html"
        }
      ]
    }
  ]
}
